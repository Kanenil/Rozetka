<Window x:Class="RozetkaUI.Windows.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RozetkaUI.Windows"
        mc:Ignorable="d"
        Title="AddProductWindow" 
        Height="950" Width="1000"
        MinHeight="750" MinWidth="640"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource ThirdBackgroundColor}">

    <Window.Resources>

        <Style x:Key="PhotoCard" TargetType="Border">
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="130"/>
            <Setter Property="Margin" Value="2 0 0 2"/>
            <Setter Property="AllowDrop" Value="True"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="CornerRadius" Value="7"/>
            <Setter Property="Opacity" Value="1"/>
        </Style>

        <Style x:Key="CardButton" TargetType="Button">

            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="{x:Null}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Background" Value="{StaticResource PrimaryButtonHoverColor}"/>
                </Trigger>
            </Style.Triggers>

        </Style>

    </Window.Resources>

    <Border HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="610"
            Height="690"
            CornerRadius="15"
            Background="{StaticResource PrimaryBackgroundColor}">

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel CanVerticallyScroll="True">

                <TextBlock Style="{StaticResource PrimaryHeaderTextBlockStyle}"
                       HorizontalAlignment="Left"
                       Margin="30 30 0 0"
                       Text="Назва товару"/>

                <TextBox Style="{StaticResource PrimaryTextBoxStyle}"
                     Margin="30 8 30 0"
                     Name="productNameTextBox"/>

                <TextBlock Style="{StaticResource PrimaryHeaderTextBlockStyle}"
                       HorizontalAlignment="Left"
                       Margin="30 30 0 0"
                       Text="Опис"/>

                <TextBox Style="{StaticResource PrimaryTextBoxStyle}"
                     MinHeight="100"
                     Margin="30 8 30 0"
                     Name="productDescriptionTextBox"/>

                <TextBlock Style="{StaticResource PrimaryHeaderTextBlockStyle}"
                       HorizontalAlignment="Left"
                       Margin="30 30 0 0"
                       Text="Фотографії"/>


                <WrapPanel Name="photosDockPanel" Margin="30 10 30 0" Orientation="Horizontal">
                    <Border Width="130"
                        Height="130"
                        CornerRadius="7"
                        Margin="2 0 0 2"
                            AllowDrop="True" 
                            Drop="Button_Drop" 
                            DragOver="Button_DragOver">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Cursor" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Gray"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Rectangle Stroke="Gray" 
                                   Height="130" 
                                   StrokeThickness="1" 
                                   StrokeDashArray="4 4"
                                   SnapsToDevicePixels="True"
                                   RadiusX="7"
                                   RadiusY="7"/>
                            <Path Data="{StaticResource Upload}"
                              Stretch="Uniform" 
                              Fill="{StaticResource PrimaryTextColor}" 
                              Width="50" Height="50"
                              HorizontalAlignment="Center">
                                <Path.LayoutTransform>
                                    <RotateTransform CenterX="0" CenterY="0" Angle="180" />
                                </Path.LayoutTransform>
                            </Path>
                            <TextBlock Style="{StaticResource PrimaryHeaderTextBlockStyle}"
                                   Text="Завантажити"
                                   HorizontalAlignment="Center"
                                   FontSize="13"
                                   VerticalAlignment="Center"
                                   Margin="0 55 0 0"/>
                            <Button Opacity="0" Click="LoadPhoto_Click"/>
                        </Grid>
                    </Border>
                </WrapPanel>


                <StackPanel Orientation="Horizontal"
                        Margin="30 30 0 0">

                    <StackPanel>
                        <TextBlock Style="{StaticResource PrimaryHeaderTextBlockStyle}"
                       HorizontalAlignment="Left"
                       Text="Категорія"/>

                        <ComboBox Margin="0 10 20 0"
                              Width="270"
                              Height="33"
                              HorizontalAlignment="Left"
                              Style="{StaticResource PrimaryComboBoxStyle}"
                              Name="categoriesComboBox">
                            <ComboBoxItem>Ноутбуки та комп’ютери</ComboBoxItem>
                            <ComboBoxItem>Побутова техніка</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Style="{StaticResource PrimaryHeaderTextBlockStyle}"
                       HorizontalAlignment="Left"
                       Text="Ціна"/>

                        <TextBox Style="{StaticResource PrimaryTextBoxStyle}"
                             Margin="0 8 30 0"
                             Width="250"
                             Name="priceTextBox"/>
                    </StackPanel>

                </StackPanel>

                <Button Margin="30 25 0 50"
                    HorizontalAlignment="Left"
                    Padding="10"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Content="Добавити продукт"/>


            </StackPanel>
        </ScrollViewer>

    </Border>

</Window>
